{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/core/**/*",
    "src/plugins/**/*"
  ],
  "exclude": [
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ]
    }
  }
}
