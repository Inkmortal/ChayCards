{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@chaycards/core": ["../src/main/api/types"]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
